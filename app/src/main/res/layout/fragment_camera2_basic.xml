<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <us.connex.miniprojectapt.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/picture"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/texture"
        android:layout_below="@+id/texture"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:text="@string/picture"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/use" />

    <Button
        android:id="@+id/use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/picture"
        android:layout_alignBottom="@+id/picture"
        android:layout_alignEnd="@+id/texture"
        android:layout_marginEnd="14dp"
        android:background="@color/colorPrimary"
        android:text="  Use this  "
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>